{
	"name": "QuickStart",
	"license": "MIT",
	"scripts": {
		"compile": "npx hardhat compile",
		"test": "npx hardhat test test/unit/*.js",
		"test:fork": "IS_FORKING=true npx hardhat test test/forking/*.js",
		"test:stage": "DEPLOY_ENV=stage npx hardhat test test/deploy-scripts/stageDeploy.test.js",
		"test:prod": "DEPLOY_ENV=prod npx hardhat test test/deploy-scripts/prodDeploy.test.js",
		"coverage": "npx hardhat coverage",
		"deploy": "npm run eslint:fix && npx hardhat deploy",
		"verify:bsc-testnet": "npx hardhat etherscan-verify --network bsc-testnet --solc-input",
		"verify:rinkeby": "npx hardhat etherscan-verify --network rinkeby --solc-input",
		"deploy:bsc-testnet": "npx hardhat deploy --network bsc-testnet",
		"verify:bsc": "npx hardhat etherscan-verify --network bsc --solc-input",
		"node": "npx hardhat node --no-deploy",
		"eslint": "npx eslint deploy/**/*.js test/**/*.js tasks/**/*.js",
		"eslint:fix": "npx eslint --fix deploy/**/*.js test/**/*.js tasks/**/*.js",
		"solhint": "solhint contracts/**/*.sol",
		"size-contracts": "npx hardhat size-contracts",
		"prettier:solidity": "./node_modules/.bin/prettier --write 'contracts/**/*.sol'",
		"slither": "HARDHAT_DEPENDENCY_COMPILER_KEEP=true slither . --filter-paths \"node_modules/@chainlink|node_modules/@openzeppelin|node_modules/@uniswap|contracts/mocks|contracts/hardhat-dependency-compiler\" --solc-remaps \"@chainlink/=$(pwd)/node_modules/@chainlink/ @openzeppelin/=$(pwd)/node_modules/@openzeppelin/ @uniswap/=$(pwd)/node_modules/@uniswap/\" && rm -rf contracts/hardhat-dependency-compiler",
		"prepare": "husky install"
	},
	"devDependencies": {
		"@atixlabs/hardhat-time-n-mine": "^0.0.5",
		"@chainlink/contracts": "^0.4.1",
		"@nomiclabs/hardhat-ethers": "^2.0.6",
		"@nomiclabs/hardhat-etherscan": "^3.0.3",
		"@nomiclabs/hardhat-solhint": "^2.0.1",
		"@nomiclabs/hardhat-waffle": "^2.0.3",
		"@nomiclabs/hardhat-web3": "^2.0.0",
		"@openzeppelin/contracts": "^4.6.0",
		"@openzeppelin/hardhat-upgrades": "^1.17.0",
		"@openzeppelin/test-helpers": "^0.5.15",
		"@tenderly/hardhat-tenderly": "^1.0.13",
		"@typechain/ethers-v5": "^10.0.0",
		"@typechain/hardhat": "^6.0.0",
		"buidler-gas-reporter": "^0.1.4",
		"chai": "^4.3.6",
		"dotenv": "^16.0.1",
		"eslint": "^7.32.0",
		"eslint-config-prettier": "^8.3.0",
		"eslint-config-standard": "^16.0.3",
		"eslint-plugin-import": "^2.24.2",
		"eslint-plugin-mocha": "^9.0.0",
		"eslint-plugin-node": "^11.1.0",
		"eslint-plugin-prettier": "^3.4.1",
		"eslint-plugin-promise": "^5.1.0",
		"eth-gas-reporter": "^0.2.25",
		"ethereum-waffle": "^3.4.4",
		"ethers": "^5.6.6",
		"hardhat": "^2.9.5",
		"hardhat-abi-exporter": "^2.9.0",
		"hardhat-contract-sizer": "^2.5.1",
		"hardhat-dependency-compiler": "^1.1.2",
		"hardhat-deploy": "^0.11.4",
		"hardhat-deploy-ethers": "^0.3.0-beta.13",
		"hardhat-docgen": "^1.3.0",
		"hardhat-gas-reporter": "^1.0.8",
		"hardhat-log-remover": "^2.0.2",
		"hardhat-preprocessor": "^0.1.4",
		"hardhat-spdx-license-identifier": "^2.0.3",
		"hardhat-tracer": "*",
		"husky": "^8.0.1",
		"prettier": "^2.6.2",
		"prettier-plugin-solidity": "^1.0.0-beta.19",
		"solhint": "^3.3.7",
		"solhint-plugin-prettier": "^0.0.5",
		"solidity-coverage": "^0.7.21",
		"typechain": "^8.0.0",
		"web3": "^1.7.3"
	},
	"dependencies": {
		"@uniswap/v2-core": "^1.0.1",
		"@uniswap/v2-periphery": "^1.1.0-beta.0",
		"ethereumjs-util": "^7.1.4",
		"hardhat-local-networks-config-plugin": "^0.0.6",
		"web3-utils": "^1.7.3"
	}
}
